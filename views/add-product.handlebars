<div class="container">
    <form action="/products/add-products" method="POST">
        <div class="form-group">
            <label for="pname">Product Name</label>
            <input type="text" class="form-control" name="pName" id="pname" aria-describedby="pname">
        </div>

        <div class="form-group">
            <label for="pdesc">Product Description</label>
            <input type="text" class="form-control" name="pDesc" id="pdesc" aria-describedby="pdesc">
        </div>

        <div class="form-group">
            <label for="pprice">Product Price</label>
            <input type="number" class="form-control" name="pPrice" id="pprice" aria-describedby="pprice">
        </div>

        <button type="submit" class="btn btn-primary">ADD Product</button>
    </form>
</div>