<div class="container">
  <br>  <br>  <br>  <br>
  <h2> Search Products</h2>
<table class="table">
  <thead>
    <tr>
      <th scope="col">ID</th>
      <th scope="col">name</th>
      <th scope="col">Description</th>
      <th scope="col">price</th>
      

    </tr>
  </thead>
  <tbody>

    {{! HERE we are looping the array of obj PRODUCTS }}
    {{#each matchingObj}}

      <tr>
        <th scope="row">{{_id}}</th>
        <td>{{pName}}</td>
        <td>{{pDesc}}</td>
        <td>{{pPrice}}</td>
      </tr>

    {{/each}}

  </tbody>
</table>
</div>
